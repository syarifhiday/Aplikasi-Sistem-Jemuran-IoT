<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg_night">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/backButton"
            android:background="@color/transparent"
            android:src="@drawable/arrow"
            android:scaleType="fitCenter"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/inter_semibold"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="Pengaturan Batasan Sensor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:gravity="center"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:scaleType="fitCenter"
                android:src="@drawable/temperature"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:text="≤" />

            <Button
                android:id="@+id/kurangSuhu"
                android:layout_width="40dp"
                android:layout_height="100px"
                android:textColor="#000"
                android:text="-" />

            <EditText
                android:id="@+id/editSuhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:hint="30"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/tambahSuhu"
                android:layout_width="40dp"
                android:layout_height="100px"
                android:textColor="#000"
                android:text="+" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:text="≤" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="110px"
                android:layout_height="110px"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/hot" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:gravity="center"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:scaleType="fitCenter"
                android:src="@drawable/day_mode"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:text="≤" />

            <Button
                android:id="@+id/kurangCahaya"
                android:layout_width="40dp"
                android:layout_height="100px"
                android:textColor="#000"
                android:text="-" />

            <EditText
                android:id="@+id/editCahaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:hint="800"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/tambahCahaya"
                android:layout_width="40dp"
                android:layout_height="100px"
                android:textColor="#000"
                android:text="+" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:text="≤" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110px"
                android:layout_height="110px"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/exposure" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="22dp"
        android:clickable="true"
        app:backgroundTint="#4CAF50"
        app:srcCompat="@drawable/save" />

</LinearLayout>